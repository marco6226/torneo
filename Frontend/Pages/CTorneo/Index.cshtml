@page
@model Frontend.Pages.CTorneo.IndexModel
@{
    ViewData["Title"]= "Index Torneo";
}

<h1>Listado de Torneos</h1>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear Torneo</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Modalidad</th>
                <th>Municipio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tor in Model.TorneosV)
            {
                <tr>
                    <td>@tor.Nombre</td>
                    <td>@tor.Categoria</td>
                    <td>@tor.Modalidad</td>
                    <td>@tor.Municipio</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@tor.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-warning" asp-route-id="@tor.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@tor.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>

