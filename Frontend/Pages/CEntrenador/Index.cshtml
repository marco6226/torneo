@page
@model Frontend.Pages.CEntrenador.IndexModel
@{
    ViewData["Title"]= "Index Entrenador";
}

<h1>Listado de Entrenadores</h1>
    <p>
        <a asp-page="Create" class="btn btn-info">Crear Entrenador</a>
    </p>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Documento</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Equipo</th>
                <th></th>              
            </tr>
        </thead>
        <tbody>
            @foreach (var ent in Model.EntrenadoresV)
            {
                <tr>
                    <td>@ent.Documento</td>
                    <td>@ent.Nombres</td>
                    <td>@ent.Apellidos</td>
                    <td>@ent.Equipo</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@ent.Id">Editar</a>
                        <a asp-page="./Details" class="btn btn-warning" asp-route-id="@ent.Id">Detalles</a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@ent.Id">Eliminar</a>
                    </td>
                </tr>
            }
                        
        </tbody>
    </table>


