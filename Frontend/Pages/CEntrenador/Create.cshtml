@page
@model Frontend.Pages.CEntrenador.CreateModel
@{
    ViewData["Title"]= "Crear Entrenador";
}

<h2>Adicionar Entrenador</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Entrenador.Documento" class="control-label"></label>
                    <input asp-for="Entrenador.Documento" class="form-control"/>
                    <span asp-validation-for="Entrenador.Documento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Nombres" class="control-label"></label>
                    <input asp-for="Entrenador.Nombres" class="form-control"/>
                    <span asp-validation-for="Entrenador.Nombres" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Apellidos" class="control-label"></label>
                    <input asp-for="Entrenador.Apellidos" class="form-control"/>
                    <span asp-validation-for="Entrenador.Apellidos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Modalidad" class="control-label"></label>
                    <input asp-for="Entrenador.Modalidad" class="form-control"/>
                    <span asp-validation-for="Entrenador.Modalidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Celular" class="control-label"></label>
                    <input asp-for="Entrenador.Celular" class="form-control"/>
                    <span asp-validation-for="Entrenador.Celular" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Correo" class="control-label"></label>
                    <input asp-for="Entrenador.Correo" class="form-control"/>
                    <span asp-validation-for="Entrenador.Correo" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="Entrenador.EquipoId" class="control-label"></label>
                    <select asp-for="Entrenador.EquipoId" class="form-control">
                        <option value="">--Seleccione un Equipo--</option>
                        @foreach (var equ in Model.Equipos)
                        {
                            <option value="@equ.Id">@equ.Nombre</option>                            
                        }

                    </select>
                    <span asp-validation-for="Entrenador.EquipoId" class="text-danger"></span>
                </div>                

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-page="Index" class="btn btn-danger">Cancelar</a>
                </div>
            </form>
        </div>
    </div>    
</div>

