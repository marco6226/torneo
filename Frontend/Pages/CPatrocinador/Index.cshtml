@page
@model Frontend.Pages.CPatrocinador.IndexModel
@{
    ViewData["Title"]= "Index Patrocinador";
}

<h1>Listado de Patrocinadores</h1>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear Patrocinador</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Documento</th>
                <th>Nombres</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pat in Model.Patrocinadores)
            {
                <tr>
                    <td>@pat.Documento</td>
                    <td>@pat.Nombres</td>
                    <td>@pat.Tipo</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@pat.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-warning" asp-route-id="@pat.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@pat.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
